<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <form id="configView" query-id="config" object-id="config">
        <toolbar place="topLeft">
            <group>
                <button id="configViewUpdate" label="Редактировать" color="primary" widget-id="configView">
                    <open-page page-id="configItemUpdate" route="/:update_config_id/update"
                               page-name="Изменение параметров настройки"
                               object-id="config" upload="query">
                        <path-param name="update_config_id" value="{id}"/>
                    </open-page>
                </button>
                <button id="configViewClose" label="Закрыть" color="secondary" widget-id="configView" model="filter">
                    <close/>
                </button>
            </group>
        </toolbar>
        <fields>
            <set field-label-location="left" field-label-align="left" field-label-width="220px">
                <checkbox id="isGeneralSystemSetting" label="Общесистемная настройка" enabled="false"/>
                <input-select id="applicationName" label="Компонент системы"
                              query-id="config_application" search-field-id="name" enabled="false">
                </input-select>
                <input-text id="code" label="Код настройки" enabled="false"/>
                <input-text id="name" label="Наименование настройки" enabled="false"/>
                <input-select id="group" label="Группа настроек" query-id="config_group" enabled="false"/>
                <input-select id="valueType" label="Тип значения" required="true" enabled="false"/>
                <input-text id="description" label="Описание" enabled="false"/>
            </set>
        </fields>
        <pre-filters>
            <eq field-id="id" param="config_id"/>
        </pre-filters>
    </form>
</simple-page>