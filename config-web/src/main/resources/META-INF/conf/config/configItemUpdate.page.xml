<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <form id="configUpdate" query-id="config" object-id="config">
        <toolbar place="topLeft">
            <group>
                <button id="configUpdate" label="Сохранить" color="primary" widget-id="configUpdate">
                    <invoke operation-id="update" object-id="config"/>
                </button>
                <button id="configClose" label="Закрыть" color="secondary" widget-id="configUpdate" model="filter">
                    <close/>
                </button>
            </group>
        </toolbar>
        <fields>
            <set field-label-location="left" field-label-align="left" field-label-width="220px">
                <checkbox id="isGeneralSystemSetting" label="Общесистемная настройка"/>
                <input-select id="applicationName" label="Компонент системы"
                              query-id="config_application" search-field-id="name">
                    <dependencies>
                        <enabling on="isGeneralSystemSetting">
                            return typeof(isGeneralSystemSetting) == 'undefined' || isGeneralSystemSetting == null ||
                            isGeneralSystemSetting == false;
                        </enabling>
                    </dependencies>
                </input-select>
                <input-text id="code" label="Код настройки" required="true" enabled="false"/>
                <input-text id="name" label="Наименование настройки" required="true"/>
                <input-select id="group" label="Группа настроек" query-id="config_group" required="true" enabled="false"/>
                <input-select id="valueType" label="Тип значения" required="true">
                    <default-value id="STRING" name="Строка"/>
                    <options>
                        <option id="STRING" name="Строка"/>
                        <option id="NUMBER" name="Число"/>
                        <option id="BOOLEAN" name="Чекбокс"/>
                    </options>
                </input-select>
                <input-text id="description" label="Описание"/>
            </set>
        </fields>
        <pre-filters>
            <eq field-id="id" param="update_config_id"/>
        </pre-filters>
    </form>
</simple-page>