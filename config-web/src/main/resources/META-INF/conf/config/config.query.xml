<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="config">

    <list count-mapping="[totalElements]" result-mapping="[content]">
        <rest filters-separator="&amp;">${config.service.url}/?{filters}&amp;page={page}&amp;size={limit}</rest>
    </list>
    <unique filters="id">
        <rest>${config.service.url}/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="string">
            <select mapping="[code]"/>
            <filters>
                <eq filter-id="id">code={id}</eq>
            </filters>
        </field>

        <field id="application" domain="object">
            <select mapping="[application]"/>
        </field>

        <field id="application.id" domain="string">
            <select mapping="['application.code']"/>
            <filters>
                <eq filter-id="application.id">application.code={application.id}</eq>
            </filters>
        </field>

        <field id="system.code" domain="string[]">
            <select/>
            <filters>
                <eq filter-id="systems*.code">systemCode={systems*.code}</eq>
            </filters>
        </field>

        <field id="systemName.id" domain="string">
            <select mapping="['application.system.code']"/>
        </field>
        <field id="systemName.name" domain="string">
            <select mapping="['application.system.name']"/>
        </field>

        <field id="applicationName.id" domain="string">
            <select mapping="['application.code']"/>
        </field>
        <field id="applicationName.name" domain="string">
            <select mapping="['application.name']"/>
        </field>

        <field id="group" domain="string[]">
            <select/>
            <filters>
                <eq filter-id="groups*.id">groupId={groups*.id}</eq>
            </filters>
        </field>

        <field id="code" domain="string">
            <select/>
            <filters>
                <eq filter-id="code">code={code}</eq>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name">name={name}</eq>
            </filters>
        </field>

        <field id="valueType.id" domain="string">
            <select mapping="[valueType]"/>
        </field>

        <field id="defaultValue" domain="string">
            <select mapping="[defaultValue]"/>
        </field>

        <field id="description" domain="string">
            <select/>
        </field>

        <field id="refBookValue" domain="string[]">
            <select mapping="[refBookValue]"/>
        </field>
    </fields>
</query>