<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="config">

    <list count-mapping="[totalElements]" result-mapping="[content]">
        <rest filters-separator="&amp;">${config.service.url}/?{filters}&amp;page={page}&amp;size={limit}</rest>
    </list>
    <unique filters="id">
        <rest>${config.service.url}/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="string">
            <select mapping="[code]"/>
            <filters>
                <eq filter-id="id">code={id}</eq>
            </filters>
        </field>

        <field id="system" domain="string">
            <select mapping="[systemName]"/>
            <filters>
                <eq filter-id="system">systemName={system}</eq>
            </filters>
        </field>

        <field id="applicationCode" domain="string">
            <select/>
        </field>
        
        <field id="group" domain="string[]">
            <select/>
            <filters>
                <eq filter-id="groups*.id">groupIds={groups*.id}</eq>
            </filters>
        </field>

        <field id="code" domain="string">
            <select/>
            <filters>
                <eq filter-id="code">code={code}</eq>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name">name={name}</eq>
            </filters>
        </field>

        <field id="valueType" domain="string">
            <select/>
        </field>

        <field id="description" domain="string">
            <select/>
        </field>

    </fields>

</query>