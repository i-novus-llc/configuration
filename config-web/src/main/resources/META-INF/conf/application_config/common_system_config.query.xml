<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0">

    <list count-mapping="#this.size()" result-mapping="#this">
        <rest filters-separator="&amp;">${config.service.url}/common_system_configs/?{filters}&amp;page={page}&amp;size={limit}</rest>
    </list>

    <unique filters="id">
        <rest>${config.service.url}/common_system_configs/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="string">
            <select/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>

        <field id="code" domain="string">
            <select/>
        </field>
        <!-- todo !!!!!!!-->
        <field id="value">
<!--                        <select/>-->
            <select normalize="#this == null ? null : (#this.equals('false') ? false : #this.equals('true') ? true : #this)"/>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name">configName={name}</eq>
            </filters>
        </field>

        <field id="isConfig" domain="boolean">
            <select normalize="false"/>
        </field>

        <field id="children" domain="object[]">
            <select mapping="[configs]"
                    normalize="T(ru.i_novus.config.web.ApplicationConfigUtil).normalizeCommonSystemConfig(#this)"/>
        </field>

        <field id="isCommonSystem">
            <filters>
                <eq filter-id="isCommonSystem" default-value="true">isCommonSystem={isCommonSystem}</eq>
            </filters>
        </field>

        <field id="group" domain="string[]">
            <filters>
                <eq filter-id="groups*.id">groupId={groups*.id}</eq>
            </filters>
        </field>

        <field id="withValue">
            <filters>
                <eq filter-id="withValue">withValue={withValue}</eq>
            </filters>
        </field>

    </fields>
</query>
