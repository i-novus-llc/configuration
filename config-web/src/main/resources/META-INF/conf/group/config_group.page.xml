<?xml version='1.0' encoding='UTF-8'?>
<page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Группы настроек" object-id="config_group">

    <regions>
        <region place="single">
            <table id="group_table" query-id="config_group">
                <filters search-buttons="false">
                    <row>
                        <input-text id="code" label="Код группы" domain="string"/>
                        <input-text id="name" label="Наименование группы" domain="string"/>
                        <search-buttons id="search"/>
                    </row>
                </filters>

                <columns>
                    <column text-field-id="codes" label="Код группы">
                        <list color="secondary" size="5"/>
                    </column>
                    <column text-field-id="name" label="Наименование группы"/>
                    <column text-field-id="description" label="Описание"/>

                    <column text-field-id="option">
                        <toolbar>
                            <button id="update" label="Изменить" icon="fa fa-pencil" type="icon">
                                <show-modal page-id="config_groupItem" detail-field-id="id" object-id="config_group"
                                            submit-operation-id="update" page-name="Изменить группу настроек"/>
                            </button>
                            <button id="delete" label="Удалить" icon="fa fa-trash" type="icon"
                                    confirm="true" confirm-title="Удалить группу настроек" confirm-text="Вы уверены, что хотите удалить группу настроек?">
                                <invoke operation-id="delete"/>
                            </button>
                        </toolbar>
                    </column>
                </columns>

                <toolbar>
                    <button id="create" label="Создать" color="primary" model="filter">
                        <show-modal page-id="config_groupItem" submit-operation-id="create" object-id="config_group"
                                    page-name="Создать группу настроек" upload="defaults"/>
                    </button>
                </toolbar>
            </table>
        </region>
    </regions>

</page>