<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
       object-id="config_group">

    <list count-mapping="[totalElements]" result-mapping="[content]">
        <rest filters-separator="&amp;">${config.service.url}/groups/?{filters}&amp;page={page}&amp;size={limit}&amp;{sorting}</rest>
    </list>
    <unique>
        <rest>${config.service.url}/groups/{id}</rest>
    </unique>
    <list filters="codeLike" result-mapping="#this">
        <rest>${config.service.url}/groups/byCode/{codeLike}</rest>
    </list>

    <fields>

        <field id="id" domain="integer">
            <select/>
            <filters>
                <eq filter-id="id"/>
            </filters>
        </field>

        <field id="codes" domain="string[]">
            <select/>
            <filters>
                <eq filter-id="code">code={code}</eq>
                <like filter-id="codeLike" normalize="#this.get(0)"/>
            </filters>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name">name={name}</eq>
            </filters>
            <sorting mapping="['nameDirection']">sort=name,{nameDirection}</sorting>
        </field>

        <field id="description" domain="string">
            <select/>
        </field>

        <field id="priority" domain="integer">
            <select/>
        </field>

    </fields>

</query>