<?xml version='1.0' encoding='UTF-8'?>
<object xmlns="http://n2oapp.net/framework/config/schema/object-3.0">
    <operations>

        <operation id="create">
            <invocation>
                <rest method="POST">${config.service.url}/group/</rest>
            </invocation>
            <in-parameters>
                <param id="codes" mapping="['codes']" domain="string[]"/>
                <param id="name" mapping="['name']"/>
                <param id="description" mapping="['description']"/>
            </in-parameters>
        </operation>

        <operation id="update">
            <invocation>
                <rest method="PUT">${config.service.url}/group/{id}</rest>
            </invocation>
            <in-parameters>
                <param id="id" mapping="['id']"/>
                <param id="codes" mapping="['codes']" domain="string[]"/>
                <param id="name" mapping="['name']"/>
                <param id="description" mapping="['description']"/>
            </in-parameters>
        </operation>

        <operation id="delete">
            <invocation>
                <rest method="DELETE">${config.service.url}/group/{id}</rest>
            </invocation>
            <in-parameters>
                <param id="id" mapping="['id']"/>
            </in-parameters>
        </operation>

    </operations>
</object>