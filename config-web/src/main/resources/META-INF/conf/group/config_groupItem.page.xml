<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-3.0">
    <form id="group_item" query-id="config_group" object-id="config_group">
        <toolbar place="topLeft">
            <group>
                <button id="group_update" label="Сохранить" color="primary" widget-id="group_item"
                        visible="{id != null}">
                    <invoke operation-id="update" object-id="config_group"/>
                </button>
                <button id="group_close" label="Закрыть" color="secondary" widget-id="group_item" model="filter">
                    <close/>
                    <dependencies>
                        <visibility ref-model="resolve" ref-widget-id="group_item">id != null</visibility>
                    </dependencies>
                </button>
            </group>
        </toolbar>
        <fields>
            <set field-label-location="left" field-label-align="left" field-label-width="220px">
                <input-text id="codesStr" label="Коды группы" required="true"
                            description="Введите коды группы через пробел"/>
                <output-text id="codes" visible="false">
                    <dependencies>
                        <set-value on="codesStr">codesStr.trim().split(' ')</set-value>
                    </dependencies>
                </output-text>
                <input-text id="name" label="Наименование группы" required="true"/>
                <input-text id="description" label="Описание"/>
                <input-text id="priority" label="Приоритет" domain="integer" min="0"/>
            </set>
        </fields>
        <pre-filters>
            <eq field-id="id" param="config_group_id"/>
        </pre-filters>
    </form>
</simple-page>
