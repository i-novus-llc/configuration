<?xml version='1.0' encoding='UTF-8'?>
<query xmlns="http://n2oapp.net/framework/config/schema/query-4.0"
    object-id="config_system">

    <list count-mapping="[totalElements]" result-mapping="[content]">
        <rest filters-separator="&amp;">${config.service.url}/systems/?{filters}&amp;page={page}&amp;size={limit}</rest>
    </list>
    <unique filters="id">
        <rest>${config.service.url}/systems/{id}</rest>
    </unique>

    <fields>
        <field id="id" domain="string">
            <select mapping="[code]"/>
            <filters>
                <eq filter-id="id">code={id}</eq>
            </filters>
        </field>

        <field id="code" domain="string">
            <select/>
        </field>

        <field id="codeStr" domain="string">
            <select mapping="[code]" normalize="#this == 'common-system' ? null : #this"/>
        </field>

        <field id="name" domain="string">
            <select/>
            <filters>
                <eq filter-id="name">name={name}</eq>
                <eq filter-id="systems*.id">code={systems*.id}</eq>
            </filters>
        </field>

        <field id="description" domain="string">
            <select/>
        </field>

        <field id="isSystem" domain="boolean">
            <select default-value="true"/>
        </field>

        <field id="children" domain="object[]">
            <select mapping="[applications]"
                    normalize="T(ru.i_novus.config.web.ApplicationSystemUtil).normalize(#this)"/>
        </field>

        <field id="appCode" domain="string">
            <filters>
                <eq filter-id="appCode">appCode={appCode}</eq>
            </filters>
        </field>

    </fields>

</query>