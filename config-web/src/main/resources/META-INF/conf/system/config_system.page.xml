<?xml version='1.0' encoding='UTF-8'?>
<simple-page xmlns="http://n2oapp.net/framework/config/schema/page-2.0"
             name="Настройка приложения">

    <table id="system_table" query-id="config_system" selected="false" route="/systems">
        <filters search-buttons="false">
            <row>
                <input-text id="appCode" label="Код приложения" domain="string"/>
                <input-select id="systems" label="Система" query-id="config_system"
                              placeholder="Все" type="multi"/>
                <search-buttons id="search"/>
            </row>
        </filters>

        <columns>
            <column text-field-id="codeStr" label="Код"/>
            <column text-field-id="name" label="Наименование"/>
            <column text-field-id="">
                <toolbar>
                    <button id="update" label="Изменить" icon="fa fa-pencil" type="icon" model="filter"
                            visible="{typeof isSystem == 'undefined'}">

                    </button>
                    <button id="delete" label="Удалить" icon="fa fa-trash" type="icon"
                            visible="{typeof isSystem == 'undefined'}">

                    </button>
                </toolbar>
            </column>
        </columns>
        <rows>
            <click>
                <open-page page-id="configDynamic?{id}" route="/:code/update" detail-field-id="id"/>
            </click>
        </rows>
    </table>

</simple-page>